{
  "name": "dgalarza-website",
  "version": "1.0.0",
  "description": "Personal website built with Hugo and Tailwind CSS",
  "scripts": {
    "dev": "npm run dev:css & hugo server -D --buildFuture",
    "dev:css": "npx tailwindcss -i ./assets/css/main.css -o ./static/css/style.css --watch",
    "build": "npm run build:css && hugo --minify",
    "build:css": "npx tailwindcss -i ./assets/css/main.css -o ./static/css/style.css --minify"
  },
  "devDependencies": {
    "tailwindcss": "^4.1.13",
    "@tailwindcss/cli": "^4.1.13"
  }
}
